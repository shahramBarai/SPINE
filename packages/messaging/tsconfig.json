{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "composite": true,
      "baseUrl": ".",
      "paths": {
        "@spine/shared": ["../shared/src/index.ts"]
      }
    },
    "include": ["src/**/*.ts", "src/utils/config.ts"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../shared", "composite": true }
    ]
  }