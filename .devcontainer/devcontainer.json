{
  "name": "IoT Platform",
  "dockerComposeFile": ["../docker-compose.yml", "docker-compose.yml"],
  "service": "devcontainer",
  "workspaceFolder":  "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "prisma.prisma",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "humao.rest-client"
      ]
    }
  }
}
