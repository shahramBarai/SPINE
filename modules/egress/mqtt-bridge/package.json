{
  "name": "mqtt-bridge",
  "version": "1.0.0",
  "description": "MQTT bridge service for bridging sensor data from Kafka to MQTT",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format cjs,esm --dts",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "prettier": "3.6.2",
    "tsx": "^4.20.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "dependencies": {
    "@spine/shared": "workspace:*",
    "@spine/messaging": "workspace:*",
    "dotenv": "^17.2.2",
    "kafkajs": "^2.2.4",
    "mqtt": "^5.3.4",
    "pino": "^8.0.0"
  }
}
