# ===========================================
# Data Service Environment Configuration
# Local deployment: COPY it into the .env and adjust it
# Docker deployment: COPY it into the .env and adjust it
# Docker Compose deployment: -
# ===========================================

# Server Configuration
PORT=3010
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info              # Log level for development
CHOKIDAR_USEPOLLING=true

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
AUTH_ENABLED=false                  # Disable strict authentication for internal service calls
DISTRIBUTED_DEPLOYMENT=false        # Indicate this is NOT a distributed deployment

# Uncomment these when moving to distributed architecture:
AUTH_ENABLED=false
DISTRIBUTED_DEPLOYMENT=false
# JWT_SECRET=your-jwt-secret-key
# SESSION_SECRET=your-session-secret-key
# INTERNAL_SERVICE_TOKEN=your-secure-internal-token

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
TIMESCALE_HOST=timescaledb
TIMESCALE_PORT=5432

DATABASE_URL_PLATFORM="postgresql://postgres:postgres@postgres:5432/platform"       # PostgreSQL (Platform Database)
DATABASE_URL_TIMESCALE="postgresql://postgres:postgres@timescaledb:5432/timescale"    # TimescaleDB (Sensor Database)

# MINIO CONFIGURATION
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin